+  -webkit-background-clip: text;
+  background-clip: text;
+  color: transparent;
+  text-shadow: 0 0 30px rgba(212, 175, 55, 0.35);
+  animation: iridescentSpectral 60s linear infinite;
+}
+
+@keyframes iridescentSpectral {
+  0% {
+    background-position: 0% 50%;
+  }
+  50% {
+    background-position: 100% 50%;
+  }
+  100% {
+    background-position: 0% 50%;
+  }
+}
+
+.wave-layer {
+  position: absolute;
+  inset: -10% -15% -5%;
+  background-repeat: no-repeat;
+  background-size: 140% 120%;
+  background-position: center bottom;
+  opacity: 0.2;
+  mix-blend-mode: screen;
+  pointer-events: none;
+  z-index: 2;
+}
+
+.wave-back {
+  animation: waveBackDrift 60s linear infinite;
+  filter: blur(12px);
+  opacity: 0.18;
+}
+
+.wave-mid {
+  animation: waveMidDrift 40s linear infinite;
+  opacity: 0.24;
+}
+
+.wave-front {
+  animation: waveFrontDrift 26s linear infinite;
+  opacity: 0.32;
+}
+
+@keyframes waveBackDrift {
+  0% {
+    transform: translate3d(-4%, 0%, 0) scale(1.05);
+  }
+  50% {
+    transform: translate3d(4%, -2%, 0) scale(1.08);
+  }
+  100% {
+    transform: translate3d(-4%, 0%, 0) scale(1.05);
+  }
+}
+
+@keyframes waveMidDrift {
+  0% {
+    transform: translate3d(6%, 1%, 0) scale(1.12);
+  }
+  50% {
+    transform: translate3d(-6%, -1%, 0) scale(1.12);
+  }
+  100% {
+    transform: translate3d(6%, 1%, 0) scale(1.12);
+  }
+}
+
+@keyframes waveFrontDrift {
+  0% {
+    transform: translate3d(2%, -2%, 0) scale(1.18);
+  }
+  50% {
+    transform: translate3d(-2%, 2%, 0) scale(1.2);
+  }
+  100% {
+    transform: translate3d(2%, -2%, 0) scale(1.18);
+  }
+}
+
+.cta-primary {
+  background: linear-gradient(135deg, rgba(255, 255, 255, 0.92) 0%, rgba(249, 232, 195, 0.92) 45%, rgba(212, 175, 55, 0.95) 100%);
