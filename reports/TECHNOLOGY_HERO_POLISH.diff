+  box-shadow: 0 0 0 1px rgba(212, 175, 55, 0.5), 0 12px 30px rgba(0, 0, 0, 0.25);
+  text-shadow: 0 1px 6px rgba(255, 255, 255, 0.35);
+}
+
+.cta-primary:hover {
+  transform: translateY(-6px) scale(1.01);
+  box-shadow: 0 0 0 2px rgba(212, 175, 55, 0.6), 0 20px 45px rgba(0, 0, 0, 0.3);
+}
+
+.cta-primary:focus-visible {
+  outline: 2px solid rgba(212, 175, 55, 0.8);
+  outline-offset: 4px;
+}
+
+.cta-primary::before {
+  background: radial-gradient(circle, rgba(255, 255, 255, 0.55) 0%, rgba(212, 175, 55, 0) 70%);
+}
+
+.tech-hero::before {
